---
import { siteConfig } from '@/config/site';
---

<div class="bg-white dark:bg-gray-950 border-y border-gray-200 dark:border-gray-800 py-6">
  <div class="container-custom">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-8 text-sm">
      <!-- Utah License -->
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2 text-brand-base" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span class="font-bold text-gray-900 dark:text-white">Utah Licensed #{siteConfig.utahLicenseNumber}</span>
      </div>

      <span class="hidden md:inline text-gray-300 dark:text-gray-700">|</span>

      <!-- Verify License Link -->
      <a 
        href={siteConfig.licenseVerifyUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-brand-base hover:text-brand-base/80 font-bold flex items-center transition-colors"
      >
        Verify License
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>

      {siteConfig.isInsuredBonded && (
        <>
          <span class="hidden md:inline text-gray-300 dark:text-gray-700">|</span>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-brand-base" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="font-bold text-gray-900 dark:text-white">Insured & Bonded</span>
          </div>
        </>
      )}


    </div>
  </div>
</div>
