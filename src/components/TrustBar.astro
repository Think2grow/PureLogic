---
import { siteConfig } from '@/config/site';
---

<div class="bg-gray-50 dark:bg-gray-800 border-y border-gray-200 dark:border-gray-700 py-4">
  <div class="container-custom">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-8 text-sm">
      <!-- Utah License -->
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2 text-green-600 dark:text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span class="font-medium">Utah Licensed #{siteConfig.utahLicenseNumber}</span>
      </div>

      <span class="hidden md:inline text-gray-300 dark:text-gray-600">|</span>

      <!-- Verify License Link -->
      <a 
        href={siteConfig.licenseVerifyUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-brand-base dark:text-brand-light hover:underline font-medium flex items-center"
      >
        Verify License
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>

      {siteConfig.isInsuredBonded && (
        <>
          <span class="hidden md:inline text-gray-300 dark:text-gray-600">|</span>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-600 dark:text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="font-medium">Insured & Bonded</span>
          </div>
        </>
      )}

      <span class="hidden md:inline text-gray-300 dark:text-gray-600">|</span>

      <!-- Google Rating -->
      <a 
        href={siteConfig.googleReviewsUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center hover:opacity-80 transition-opacity"
      >
        <div class="flex items-center">
          <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <span class="ml-1 font-semibold">{siteConfig.googleRating}</span>
          <span class="mx-1 text-gray-400">Â·</span>
          <span class="text-gray-600 dark:text-gray-400">{siteConfig.reviewCount} reviews</span>
        </div>
      </a>
    </div>
  </div>
</div>
