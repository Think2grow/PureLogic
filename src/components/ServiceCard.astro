---
import type { Service } from '@/data/services';

interface Props {
  service: Service;
}

const { service } = Astro.props;
---

<a 
  href={`/services/${service.slug}`}
  class="group block bg-white dark:bg-gray-900 rounded-xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 dark:border-gray-800"
>
  <div class="p-6 lg:p-8">
    <!-- Icon -->
    <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">{service.icon}</div>
    
    <!-- Title -->
    <h3 class="text-xl font-bold mb-3 group-hover:text-brand-base transition-colors">
      {service.title}
    </h3>
    
    <!-- Description -->
    <p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">
      {service.shortDescription}
    </p>
    
    <!-- Learn More Link -->
    <div class="flex items-center text-brand-base font-bold group-hover:translate-x-1 transition-transform">
      Learn More
      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>
</a>
