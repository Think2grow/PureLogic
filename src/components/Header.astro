---
import { siteConfig } from '@/config/site';

const currentPath = Astro.url.pathname;

const navLinks = [
  { label: 'Services', href: '/services' },
  { label: 'Project Estimator', href: '/projects' },
  { label: 'Process', href: '/process' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' }
];
---

<header class="sticky top-0 z-50 bg-white dark:bg-gray-950 border-b border-gray-100 dark:border-gray-800 shadow-lg">
  <div class="container-custom">
    <!-- Top Bar - License & Phone (Hidden on mobile) -->
    <div class="hidden lg:flex items-center justify-between py-2 px-0 text-xs border-b border-gray-100 dark:border-gray-800">
      <div class="flex items-center space-x-4 text-gray-600 dark:text-gray-400">
        <a href={siteConfig.licenseVerifyUrl} target="_blank" rel="noopener noreferrer" class="flex items-center hover:text-brand-base transition-colors">
          <svg class="w-4 h-4 mr-1 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Utah License: {siteConfig.utahLicenseNumber}
        </a>
      </div>
    </div>

    <!-- Main Header -->
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center flex-shrink-0">
        <img src="/images/Pure%20Logic%20Solutions%20Logo.jpg" alt="Pure Logic Solutions" class="h-14 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-1">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class={`px-4 py-2 text-sm font-semibold transition-colors rounded-md ${
              currentPath.startsWith(link.href) 
                ? 'text-brand-base bg-brand-base/10' 
                : 'text-gray-700 dark:text-gray-300 hover:text-brand-base dark:hover:text-brand-base hover:bg-gray-100 dark:hover:bg-gray-800'
            }`}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-3 lg:space-x-4">
        <!-- Phone (Hidden on small screens) -->
        <a 
          href={`tel:${siteConfig.phone.replace(/\D/g, '')}`}
          class="hidden sm:flex items-center text-sm font-semibold text-brand-base hover:opacity-80 transition-opacity"
        >
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="hidden md:inline">{siteConfig.phone}</span>
        </a>

        <!-- CTA Button -->
        <a 
          href={siteConfig.primaryCtaLink}
          class="btn btn-primary text-xs sm:text-sm"
        >
          <span class="hidden sm:inline">Get a Free</span>
          Estimate
        </a>

        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-button"
          class="lg:hidden p-2 text-gray-700 dark:text-gray-300 hover:text-brand-base transition-colors"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4 border-t border-gray-100 dark:border-gray-800">
      <nav class="flex flex-col space-y-1 pt-4">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class={`px-4 py-3 rounded-md text-sm font-semibold transition-colors ${
              currentPath.startsWith(link.href)
                ? 'bg-brand-base/10 text-brand-base'
                : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900'
            }`}
          >
            {link.label}
          </a>
        ))}
        <a 
          href={`tel:${siteConfig.phone.replace(/\D/g, '')}`}
          class="px-4 py-3 rounded-md text-sm font-semibold text-brand-base flex items-center"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {siteConfig.phone}
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = mobileMenuButton?.querySelector('.menu-icon');
  const closeIcon = mobileMenuButton?.querySelector('.close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
    
    mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
