---
import MainLayout from '@/layouts/MainLayout.astro';
import { siteConfig } from '@/config/site';
---

<MainLayout 
  title="Contact Us | Get a Free Estimate"
  description="Contact PureLogic Construction for a free project estimate. Call, text, or fill out our simple form to get started on your Utah remodeling or construction project."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-brand-dark to-brand-base text-white py-16 lg:py-24">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="heading-xl mb-6">Get Your Free Estimate</h1>
        <p class="text-xl text-gray-100 leading-relaxed">
          Ready to start your project? Fill out the form below or give us a call. We'll respond 
          within 24 hours to schedule your consultation.
        </p>
      </div>
    </div>
  </section>

  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8">
            <h2 class="heading-md mb-6">Request an Estimate</h2>
            <form class="space-y-6" method="POST" action="/api/contact">
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                  placeholder="Your name"
                />
              </div>

              <!-- Email & Phone -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                    Email <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                    placeholder="your@email.com"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                    Phone <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                    placeholder="(801) 555-0123"
                  />
                </div>
              </div>

              <!-- City & Project Type -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="city" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                    City <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="city" 
                    name="city" 
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                    placeholder="Salt Lake City, UT"
                  />
                </div>
                <div>
                  <label for="projectType" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                    Project Type <span class="text-red-500">*</span>
                  </label>
                  <select 
                    id="projectType" 
                    name="projectType" 
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                  >
                    <option value="">Select a service...</option>
                    <option value="kitchen-remodel">Kitchen Remodel</option>
                    <option value="bathroom-remodel">Bathroom Remodel</option>
                    <option value="home-addition">Home Addition</option>
                    <option value="basement-finish">Basement Finishing</option>
                    <option value="custom-home">Custom Home Build</option>
                    <option value="whole-home-remodel">Whole Home Remodel</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <!-- Timeline & Budget -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="timeline" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                    Desired Timeline
                  </label>
                  <select 
                    id="timeline" 
                    name="timeline"
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                  >
                    <option value="">Select timeline...</option>
                    <option value="asap">As soon as possible</option>
                    <option value="1-3-months">1-3 months</option>
                    <option value="3-6-months">3-6 months</option>
                    <option value="6-12-months">6-12 months</option>
                    <option value="planning">Just planning/researching</option>
                  </select>
                </div>
                <div>
                  <label for="budget" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                    Budget Range
                  </label>
                  <select 
                    id="budget" 
                    name="budget"
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                  >
                    <option value="">Select range...</option>
                    <option value="under-25k">Under $25,000</option>
                    <option value="25k-50k">$25,000 - $50,000</option>
                    <option value="50k-100k">$50,000 - $100,000</option>
                    <option value="100k-200k">$100,000 - $200,000</option>
                    <option value="200k-plus">$200,000+</option>
                    <option value="not-sure">Not sure yet</option>
                  </select>
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-semibold mb-2 text-gray-900 dark:text-white">
                  Tell Us About Your Project
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-base dark:focus:ring-brand-light focus:border-transparent"
                  placeholder="Describe your project vision, goals, or any specific questions..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div>
                <button 
                  type="submit"
                  class="w-full btn btn-primary py-4 text-lg"
                >
                  Send Estimate Request
                </button>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-3 text-center">
                  We'll respond within 24 hours to schedule your consultation
                </p>
              </div>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-1">
          <div class="space-y-6">
            <!-- Direct Contact -->
            <div class="bg-brand-base text-white rounded-xl p-6">
              <h3 class="font-bold text-xl mb-4">Prefer to Call or Text?</h3>
              <div class="space-y-4">
                <div>
                  <div class="text-sm text-gray-200 mb-1">Phone</div>
                  <a 
                    href={`tel:${siteConfig.phone.replace(/\D/g, '')}`}
                    class="text-2xl font-bold hover:text-accent transition-colors"
                  >
                    {siteConfig.phone}
                  </a>
                </div>
                <div>
                  <div class="text-sm text-gray-200 mb-1">Email</div>
                  <a 
                    href={`mailto:${siteConfig.email}`}
                    class="hover:text-accent transition-colors break-all"
                  >
                    {siteConfig.email}
                  </a>
                </div>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6">
              <h3 class="font-bold text-lg mb-4">Business Hours</h3>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Mon - Fri</span>
                  <span class="font-medium">7:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Saturday</span>
                  <span class="font-medium">8:00 AM - 4:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Sunday</span>
                  <span class="font-medium">Closed</span>
                </div>
              </div>
            </div>

            <!-- License Info -->
            <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6">
              <h3 class="font-bold text-lg mb-4">Licensed & Professional</h3>
              <div class="space-y-3">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 dark:text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <div>
                    <div class="text-sm font-medium">Utah License #{siteConfig.utahLicenseNumber}</div>
                    <a 
                      href={siteConfig.licenseVerifyUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-xs text-brand-base dark:text-brand-light hover:underline"
                    >
                      Verify License â†’
                    </a>
                  </div>
                </div>
                {siteConfig.isInsuredBonded && (
                  <div class="flex items-start">
                    <svg class="w-5 h-5 text-green-600 dark:text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <div class="text-sm font-medium">Fully Insured & Bonded</div>
                  </div>
                )}
              </div>
            </div>

            <!-- Service Area Map Placeholder -->
            <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6">
              <h3 class="font-bold text-lg mb-4">Service Area</h3>
              <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              </div>
              <p class="text-sm text-gray-600 dark:text-gray-300">
                Serving Salt Lake County, Utah County, and surrounding areas
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What Happens Next -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container-custom max-w-4xl">
      <h2 class="heading-lg mb-12 text-center">What Happens Next?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/10 dark:bg-brand-light/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-brand-base dark:text-brand-light">1</span>
          </div>
          <h3 class="font-bold mb-2">We'll Respond Quickly</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Expect to hear from us within 24 hours to schedule your consultation
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/10 dark:bg-brand-light/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-brand-base dark:text-brand-light">2</span>
          </div>
          <h3 class="font-bold mb-2">Site Visit & Discussion</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            We'll visit your property, listen to your needs, and discuss your vision
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/10 dark:bg-brand-light/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-brand-base dark:text-brand-light">3</span>
          </div>
          <h3 class="font-bold mb-2">Detailed Estimate</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            You'll receive a comprehensive written estimate within 5-7 business days
          </p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
