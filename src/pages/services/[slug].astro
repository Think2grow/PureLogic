---
import MainLayout from '@/layouts/MainLayout.astro';
import Button from '@/components/Button.astro';
import FAQItem from '@/components/FAQItem.astro';
import { serviceDetails } from '@/data/services';

export async function getStaticPaths() {
  return Object.keys(serviceDetails).map((slug) => ({
    params: { slug },
    props: { service: serviceDetails[slug] }
  }));
}

const { slug } = Astro.params;
const service = serviceDetails[slug as string];

if (!service) {
  return Astro.redirect('/404');
}

// Service Schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": service.title,
  "provider": {
    "@type": "GeneralContractor",
    "name": "PureLogic Construction"
  },
  "areaServed": {
    "@type": "State",
    "name": "Utah"
  },
  "description": service.description
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": service.faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<MainLayout 
  title={service.title}
  description={service.description}
>
  <Fragment slot="head">
    <script is:inline type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-brand-dark to-brand-base text-white py-16 lg:py-24">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="heading-xl mb-6">{service.title}</h1>
        <p class="text-xl text-gray-100 leading-relaxed">
          {service.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Quick Info -->
  <section class="bg-gray-50 dark:bg-gray-800 py-8 border-b border-gray-200 dark:border-gray-700">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide mb-2">
            Typical Cost Range
          </div>
          <div class="text-2xl font-bold text-brand-base dark:text-brand-light">
            ${service.costRange.min.toLocaleString()} - ${service.costRange.max.toLocaleString()}
          </div>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide mb-2">
            Typical Timeline
          </div>
          <div class="text-2xl font-bold text-gray-900 dark:text-white">
            {service.timeline}
          </div>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide mb-2">
            Get Started
          </div>
          <Button href="/contact" variant="primary">
            Request Estimate
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Cost Details -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h2 class="heading-md mb-6">Understanding Costs</h2>
        <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6 mb-8">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
            <strong>Note:</strong> {service.costRange.note}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Who It's For -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h2 class="heading-md mb-6">Who This Service Is For</h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {service.whoItsFor.map((item) => (
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-600 dark:text-green-500 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 dark:text-gray-300">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h2 class="heading-md mb-6">What's Included</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {service.features.map((feature) => (
            <div class="flex items-start">
              <svg class="w-5 h-5 text-brand-base dark:text-brand-light mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 dark:text-gray-300">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Photo Gallery Placeholder -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <h2 class="heading-md mb-8 text-center">Project Gallery</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {[1, 2, 3, 4, 5, 6].map((i) => (
          <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="heading-md mb-8 text-center">Frequently Asked Questions</h2>
        {service.faqs.map((faq, index) => (
          <FAQItem 
            question={faq.question} 
            answer={faq.answer} 
            id={`${service.slug}-${index}`} 
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-brand-base text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="heading-lg mb-6">Ready for Your {service.title}?</h2>
        <p class="text-xl mb-8 text-gray-100">
          Let's discuss your project in detail and provide you with a comprehensive estimate.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary" size="lg">
            Get a Free Estimate
          </Button>
          <Button href="/projects" variant="outline" size="lg" class="text-white border-white hover:bg-white/10">
            View Similar Projects
          </Button>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
