---
import MainLayout from '@/layouts/MainLayout.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import Button from '@/components/Button.astro';
import { services } from '@/data/services';
---

<MainLayout 
  title="Our Services"
  description="Expert kitchen remodeling, bathroom renovations, home additions, basement finishing, and custom home builds in Utah. Quality craftsmanship and professional service."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-brand-dark to-brand-base text-white py-16 lg:py-24">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="heading-xl mb-6">Premium Construction Services in Utah</h1>
        <p class="text-xl text-gray-100 leading-relaxed">
          From kitchen remodels to custom home builds, we deliver exceptional craftsmanship 
          and professional service on every project. Explore our services below.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((service) => (
          <ServiceCard service={service} />
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="heading-lg mb-4">Why Choose PureLogic?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600 dark:text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Licensed & Professional</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Utah licensed contractor with full insurance coverage
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Experienced Team</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Skilled craftsmen with decades of combined experience
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-100 dark:bg-yellow-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600 dark:text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Highly Rated</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            4.9 stars with over 100 five-star reviews
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600 dark:text-purple-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Quality Guaranteed</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            One-year workmanship warranty on all projects
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-brand-base text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="heading-lg mb-6">Ready to Get Started?</h2>
        <p class="text-xl mb-8 text-gray-100">
          Schedule a free consultation to discuss your project and receive a detailed estimate.
        </p>
        <Button href="/contact" variant="primary" size="lg">
          Request a Free Estimate
        </Button>
      </div>
    </div>
  </section>
</MainLayout>
