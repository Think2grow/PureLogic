---
import MainLayout from '@/layouts/MainLayout.astro';
import Button from '@/components/Button.astro';
import TrustBar from '@/components/TrustBar.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import ScrollReveal from '@/components/ScrollReveal';
import { siteConfig } from '@/config/site';
import { services } from '@/data/services';
import { testimonials } from '@/data/testimonials';
import TestimonialsCarousel from '@/components/TestimonialsCarousel';

const featuredServices = services.filter(s => s.featured).slice(0, 3);
const allTestimonials = testimonials.slice(0, 3);
---

<MainLayout 
  title={siteConfig.businessName}
  description={siteConfig.seo.description}
>
  <!-- Hero Section -->
  <section id="hero-section" class="relative text-white section-padding overflow-hidden" style="background-image: url('/images/hero/unnamed.png'); background-size: cover; background-position: 50% 45%; background-repeat: no-repeat;">
    <div class="absolute inset-0 bg-linear-to-r from-black/53 via-black/43 to-black/53"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="heading-xl mb-6 drop-shadow-2xl text-white" style="color: white; text-shadow: 0 4px 12px rgba(0, 0, 0, 0.8), 0 2px 6px rgba(0, 0, 0, 0.6);">
          Premium Home Remodeling & Construction
        </h1>
        <p class="text-xl md:text-2xl mb-10 text-white leading-relaxed drop-shadow-lg" style="text-shadow: 0 3px 10px rgba(0, 0, 0, 0.8);">
          <span class="text-brand-light">Expert craftsmanship.</span> <span class="text-brand-light">Clear communication.</span> <span class="text-brand-light">Results that exceed expectations.</span>
        </p>
        <div class="flex flex-col sm:flex-row gap-5 justify-center items-center">
          <Button href="/contact" variant="primary" size="lg" class="shadow-2xl font-bold text-lg">
            Get a Free Estimate
          </Button>
          <Button href={`tel:${siteConfig.phone.replace(/\D/g, '')}`} variant="outline" size="lg" class="text-white border-2 border-white hover:bg-white/20 shadow-xl font-bold text-lg">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Now
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <TrustBar />

  <!-- Why Choose Us (Brief) -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
        <!-- Expertise -->
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/15 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-brand-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Expert Craftsmanship</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Licensed professionals with years of experience delivering high-quality work on every project.
          </p>
        </div>

        <!-- Communication -->
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/15 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-brand-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Clear Communication</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Regular updates and transparent communication throughout your project from start to finish.
          </p>
        </div>

        <!-- Reliability -->
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/15 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-brand-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">On Time, On Budget</h3>
          <p class="text-gray-600 dark:text-gray-400">
            We respect your timeline and budget. No surprise costs or unexpected delays.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Services -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="heading-lg mb-4">What We Specialize In</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          From kitchens to custom homes, we transform spaces with precision and care.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
        {featuredServices.map((service) => (
          <ServiceCard service={service} />
        ))}
      </div>

      <div class="text-center mt-12">
        <Button href="/services" variant="primary">
          Explore All Services
        </Button>
      </div>
    </div>
  </section>

  <!-- VSL Video Section -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="heading-lg mb-4">See Our Approach</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Understand our proven methodology and why homeowners trust us
        </p>
      </div>
      
      <!-- Video Placeholder -->
      <div class="max-w-4xl mx-auto">
        <div class="relative w-full bg-gray-900 rounded-2xl overflow-hidden shadow-2xl" style="aspect-ratio: 16 / 9;">
          <div class="absolute inset-0 flex items-center justify-center bg-linear-to-br from-gray-800 to-gray-900">
            <div class="text-center">
              <div class="mb-4">
                <svg class="w-20 h-20 text-brand-base mx-auto" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 6a2 2 0 012-2h12a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z" />
                </svg>
              </div>
              <p class="text-white font-semibold mb-2">VSL Video Coming Soon</p>
              <p class="text-gray-400 text-sm">Our founder explains the Pure Logic difference</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Preview -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="heading-lg mb-4">Trusted by Utah Homeowners</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          See what families say about working with us
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <TestimonialsCarousel client:load testimonials={allTestimonials} />
      </div>

      <div class="text-center mt-8">
        <Button href="/reviews" variant="outline">
          Read More Reviews
        </Button>
      </div>
    </div>
  </section>

  <!-- Process Preview -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="heading-lg mb-4">Our 3-Step Process</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          From consultation to completion, we keep you informed every step of the way
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-brand-base">1</span>
          </div>
          <h3 class="text-xl font-bold mb-3">Discovery & Design</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Understand your vision and create a detailed plan
          </p>
          <a href="/process" class="inline-flex items-center text-brand-base font-semibold hover:opacity-80 transition-opacity">
            Learn more
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-brand-base">2</span>
          </div>
          <h3 class="text-xl font-bold mb-3">Build & Communicate</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Expert execution with regular updates and transparency
          </p>
          <a href="/process" class="inline-flex items-center text-brand-base font-semibold hover:opacity-80 transition-opacity">
            Learn more
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-brand-base/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-brand-base">3</span>
          </div>
          <h3 class="text-xl font-bold mb-3">Closeout & Warranty</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Final walkthrough and comprehensive warranty support
          </p>
          <a href="/process" class="inline-flex items-center text-brand-base font-semibold hover:opacity-80 transition-opacity">
            Learn more
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>


</MainLayout>

