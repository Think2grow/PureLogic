<MainLayout 
  title="Thank You - Your Estimate is Ready"
  description="Thank you for using our construction cost calculator. We'll be in touch soon to discuss your project."
>
  <!-- Thank You Section -->
  <section class="bg-gradient-to-br from-brand-dark to-brand-base text-white py-20 lg:py-28">
